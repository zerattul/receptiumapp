@import "reset.styl"

fondo    = #0C121C
fondoBar = #151C25
luz      = #2F3B42
verde    = #03C063

*
  font-size 16px
  color #f2f2f2

body
  background-color fondo
  font-family helvetica
  font-size 9px

.contGeneral
  display flex
  flex-direction column
  justify-content space-between

  .barraCont
    align-items center
    background-color fondoBar
    display flex
    justify-content space-around
    height 70px

    &-buscador, &-texto
      display flex
      width 40%

    &-buscador
      position relative

    &--input
      border-radius 30px
      background-color fondo
      border 1px solid luz
      padding 0.8em 0 0.8em 1em
      outline none
      width 100%

    &--btn
      background-color luz
      border none
      border-radius 40px
      cursor pointer
      height 45px
      font-size 0.8em
      padding 0 3em
      position absolute
      top 0
      right 0
      transition all 0.3s ease
      &:hover
        background-color lighten(luz, 10)

    &-texto
      justify-content space-between

  .centralCont
    margin 0 auto
    width 90%

    &-botones
      display flex
      flex-direction column
      margin-top 3em

      .centralCont-elements
        margin-top 1em

        .textarea
          color #d9d9d9
          width 100%
          resize none
          background-color fondoBar
          border 6px dotted luz
          padding 1.5rem

    &-wrapper
      display flex
      justify-content space-between

      .centralCont-column
        margin-top 1em
        width 47%
        height 900px
        overflow-y scroll

      .centralCont--titulo
        color verde
        font-size 1.3em
        text-align center

      .centralCont-invitado
        margin-top 2em
        background-color fondoBar
        border-radius 20px

        .centralCont-invitado__text
          padding 2em 1em 0.1em 2em
          &:last-child
            padding-bottom: 2em

        .done-true
          text-decoration line-through;
          color verde

        .centralCont-contNombre
          display flex
          justify-content space-between
          align-items center
          margin: 0 auto
          width : 90%

          .centralCont-nombres
            width 80%
            display flex
            justify-content space-between

            .aling-left
              display flex
              justify-content space-between
              align-items center

              .checkbox
                padding 1em
                background-color: verde
                width 40px

            button
              background-color verde
              color white
              border none
              border-radius 50%
              font-size 0.6rem
              width 50px
              height 50px
              transition all 0.3s ease

              &:hover
                background-color lighten(verde,10)

          .centrarCont--invtNombre
            font-size 1.3em
            line-height 1.5em
            transition all 0.3s ease
            cursor pointer
            &:hover
              color verde

          .central-cont-mesa
            display flex
            flex-direction column
            align-items center

            .central-cont--mesa
              font-size 3em
              padding-bottom 0.15em

            .centralCont--entrada
              font-size 1.2em

          .centralCont--counter
            background-color verde
            border-radius 50%
            border none
            cursor pointer
            transition all 0.3s ease
            outline none
            width 40px
            height 40px
            margin 1em 0
            position relative
            &:hover
              background-color lighten(verde, 10)

            .counter--numA, .counter--numB, .counter--diagonal
              color fondoBar
              font-size 1.3em
              font-weight bold

            .counter--numA
              position absolute
              top 7px
              left 10px
              &:after
                content ""
                width 40px
                height 2px
                background-color fondoBar

            .counter--diagonal
              position absolute
              top 5px
              left 15px
              font-size 3em
              font-weight normal

            .counter--numB
              position absolute
              top 20px
              left 22px

        .centralCont-contDesc
          margin 0 auto
          width 90%

          .centralCont--entrada, .centralCont--mesa
            padding 0.7em 0 0 1em

          .centralCont--mesa
            padding-bottom 1em
            font-size 1.6em

        .centralCont--list
          margin 0 auto
          padding 1em 0
          width 90%

          .centralCont--element
            padding 1em 0

      .centralCont-barras
        display flex
        justify-content center

      .centralCont-mapa
        margin 4em auto
        width 100%
        display flex
        flex-direction column
        align-items center

        #circle, #circle-mesa
          margin-top 2em
          position relative

          .valorMesa
            font-size 3.5em
            position absolute
            top 37%
            left 60px

  .CentralImg
    position fixed
    bottom 0
    right 0
    display flex
    justify-content flex-end
    margin-top 4em
    width 300px

    img
      margin-right 4em
      margin-bottom 4em
      cursor pointer
      transition all 0.3s ease
      width 100%
      height 100%
      &:hover
        transform: scale(1.05);

  .ligthbox
    position absolute
    top 0
    left 0
    background-color rgba(0, 0 , 0 ,0.7)
    width 100vh
    height 100vh
    display none

    img
      margin 5em 5em
      width 600px
      height 300px

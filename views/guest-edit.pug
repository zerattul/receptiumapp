extends layout.pug

block content
	//- TopBar
	section.m-section.topBar
		.m-center
			.topBar-cont
				span.mx-cont__user #{user}
				a(href="/logout").topBar-cont__logout Salir

	section.m-section
		.m-center
			.createEvent
				h1.createEvent__title Editar Invitado
				form(method="post" action="/events/" + event + '/guests/' + data._id + '/actualizar').m-modal-popup-content
					input(type="hidden", name="_method", value="PUT")
					input(type="hidden", name="_id")
					.m-modal-popup-content__label Nombre:
					input(type="text" name="name" placeholder=data.name).mx-modal-popup-content__input
					.m-modal-popup-content__label Mesa:
					input(type="text" name="table" placeholder=data.table).mx-modal-popup-content__input
					.m-modal-popup-content__label email:
					input(type="text" name="email" placeholder=data.email).mx-modal-popup-content__input
					.m-modal-popup-content__label Tel√©fono:
					input(type="text" name="phone" placeholder=data.phone).mx-modal-popup-content__input
					button.mx__createEvent guardar
